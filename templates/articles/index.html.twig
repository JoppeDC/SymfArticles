{% extends 'base.html.twig' %}

{% block javascripts %}
    <script src="/js/main.js"></script>
{% endblock %}

{% block title %}
    Symfony Articles
{% endblock %}

{% block body %}
    {% if articles %}

    <table id="articles" class="table table-striped" width="100%">
        <thead>
        <tr>
            <th>Article Title</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
            <td>{{ article.title }}</td>
            <td><a href="/article/{{ article.id }}" class="btn btn-dark">show</a>
                <a href="/article/edit/{{ article.id }}" class="btn btn-dark">edit</a>
                <a href="#" class="btn btn-danger delete-article" data-id="{{ article.id }}">delete</a>

            </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% else %}
    <p>No articles found</p>
    {% endif %}

{% endblock %}